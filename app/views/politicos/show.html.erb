<div class="container">
  <table>
    <h1><%= foto_politico(@apresenta.politicos) %>
      <%= @apresenta.politicos.nome %> (<%= @apresenta.politicos.sgpartido %>)</h1>

    <h2>Maior Despesa: <%= number_to_currency(@apresenta.gastos_ordenados.first.valor_liquido, :unit => "R$") %></h2>
  </table>

  <br>

  <%== pagy_bootstrap_nav(@pagy) %>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Fornecedor: </th>
        <th scope="col">Data: </th>
        <th scope="col">Valor: </th>
        <th scope="col">URL: </th>
      </tr>
    </thead>
    <% @records.each do |despesa| %>
      <tr>
        <td><%= despesa.fornecedor %></td>
        <td><%= despesa.data_emissao %></td>
        <td style="text-align:right;"><%= number_to_currency(despesa.valor_liquido, :unit => "R$") %></td>
        <td><%= link_to "Recibo", despesa.url_documento, target: :_blank %></td>
      </tr>
    <% end %>
  </table>
</div>