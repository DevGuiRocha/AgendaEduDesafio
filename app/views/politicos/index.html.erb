<div class="container">
  <table class="table">
    <thead class="thead-dark">
      <% if @apresenta.politicos.size == 0%>,
        <p>Nenhum Politico encontrado</p>
      <% else %>
        <h2>Politicos Cadastrados (CE)</h2> 

          <%== pagy_bootstrap_nav(@pagy) %>

          <tr>
            <th>Foto </th>
            <th>Nome </th>
            <th>CPF </th>
            <th>Partido </th>
            <th>Total </th>
          </tr>

          <% @records.each do |politicos|%>

            <tr>
              <td><%= link_to foto_politico(politicos), politico_path(politicos) %></td>
              <td><%= link_to "#{politicos.nome}", politico_path(politicos) %></td>
              <td><%= politicos.cpf %></td>
              <td><%= politicos.sgpartido %></td>
              <td><%= number_to_currency(@apresenta.gastos[politicos.id], :unit => "R$") %></td>
            </tr>

          <% end %>
      <% end %>
  </table>
    <%== pagy_bootstrap_nav(@pagy) %>
</div>
